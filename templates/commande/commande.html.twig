{% extends "base.html.twig" %}

{% block body %}

  <div class="container">
    <div class="row">

      <div class="col-sm-12">

        <h2>
          Vos commandes
        </h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Références</th>
              <th>Client</th>

            </tr>
          </thead>
          <tbody>
            {% for commande in commandes %}
              <tr>
                <td>{{ commande.createdat|date('d/m/Y à H:i') }}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ user.username}}</td>

              </tr>
            {% endfor %}
          </tbody>
        </table>

      </div>

    </div>
  </div>
{% endblock %}