{% extends "base.html.twig" %}

{% block title 'Livraison' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="">
            <h2>Livraison</h2>
            <div id="collapseOne" class="accordion-body  in">
                <div class="accordion-inner row">
                    <div class="span4">
                        {% if adresses|length != 0 %}
                        <div class="row">
                        <div class="col-12 col-md-12">
                            <form action="{{path('validation')}}" method="POST">
                                <h4>Adresse de livraison</h4>
                                {% for adresse in adresses %}
                                    <label class="radio">
                                        <input type="radio" name="livraison" id="livraison" value="{{adresse.id}}" {% if loop.index0 == 0%}checked="checked"{% endif %}>
                                        {{adresse.adresse}}, {{adresse.cp}} {{adresse.ville}} - {{adresse.pays}} <a href=""><span class="oi oi-trash"></span></a><br>
                                        {{adresse.prenom}} {{adresse.name}}
                                    </label>
                                {% endfor %}
                                <br>
                                <h4>Adresse de facturation</h4>
                                {% for adress in adresses %}
                                    <label class="radio">
                                        <input type="radio" name="facturation" id="facturation" value="{{adress.id}}" {% if loop.index0 == 0%}checked="checked"{% endif %}>
                                        {{adress.adresse}}, {{adress.cp}} {{adress.ville}} - {{adress.pays}}<a href=""><span class="oi oi-trash"></span></a><br>
                                        {{adress.prenom}} {{adress.name}}
                                    </label>
                                {% endfor %}
                                <button class="btn btn-primary">Valider mon adresse de livraison</button>
                            </form>
                        </div>
                        </div>
                        {% endif %}   
                    </div>

                    <div class="span8">
                        <h4>Ajouter une nouvelle adresse</h4>
                        {{ form_start(form) }}
                        {{ form_rest(form)}}
                            <button class="btn btn-primary">Ajouter</button>
                        {{ form_end(form) }}
                   
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}